    var heading6Image = Model?.Value<IPublishedContent>("cardHeading6Image")?.Url() ?? "";
    var storyBackgroundImage = Model?.Value<IPublishedContent>("storyBackgroundImage")?.Url() ?? "";
    var storyHeadlineImage = Model?.Value<IPublishedContent>("storyHeadlineImage")?.Url() ?? "";
    var recentImg1 = Model?.Value<IPublishedContent>("recentImg1")?.Url() ?? "";
