<section>


    <!-- hero section -->
    <div class="hero">
        <div class="img-hero" style="background-image: url('@backgroundImage'); background-size: cover; background-position: center; height: 60vh;">
            <div class="row">
                <div class="col-4 offset-2">
                    <div class="img-hero-text">
<h1 class="hero-text">@Model?.Value("heroHeadline")</h1>
<h1 class="hero-text">@Model?.Value("heroHeadline1")</h1>
<p class="hero-p-text">
    @Model?.Value("heroText")
</p>
<a href="@Model?.Value("heroButtonUrl")" class="btn-a">
    <button class="btn-hero">@Model?.Value("heroButtonText")</button>
</a>

                    </div>
                </div>
            </div>
        </div>
    </div>

</section>


